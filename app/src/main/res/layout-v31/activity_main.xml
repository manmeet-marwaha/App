<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blurf"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="NutriHelp"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="110dp"
        android:drawableLeft="@drawable/img" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="230dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:text="NutriHelp supports in managing your general wellbeing, Nutrient-related diseases and deficiencies through personalised nutrition advice."
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="22dp" />

    <Button
        android:layout_width="295dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="59dp"
        android:layout_marginTop="360dp"
        android:backgroundTint="?android:attr/windowSplashScreenBackground"
        android:text="Get Started"
        android:textColor="@color/black"
        tools:ignore="HardcodedText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="675dp"
        android:layout_marginRight="140dp"
        android:backgroundTint="?android:attr/windowSplashScreenBackground"
        android:text="Terms of Use"
        android:textSize="12sp" />

    <Button
        android:layout_width="297dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:backgroundTint="?android:attr/windowSplashScreenBackground"
        android:textColor="@color/black"
        android:layout_centerInParent="true"
        android:layout_marginStart="59dp"
        android:layout_marginBottom="245dp"
        android:text="I already have an account" />
</RelativeLayout>
